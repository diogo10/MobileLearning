<resources>


    
    <style name="AppTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_mobilelearning</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mobilelearning</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mobilelearning</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mobilelearning</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mobilelearning</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mobilelearning</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mobilelearning</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mobilelearning</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mobilelearning</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Mobilelearning.Widget</item>

    </style>

    <style name="ActionBar.Solid.Mobilelearning" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_mobilelearning</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mobilelearning</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mobilelearning</item>
        <item name="progressBarStyle">@style/ProgressBar.Mobilelearning</item>
    </style>

    <style name="ActionBar.Transparent.Mobilelearning" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_mobilelearning</item>
        <item name="progressBarStyle">@style/ProgressBar.Mobilelearning</item>
    </style>
	
    <style name="PopupMenu.Mobilelearning" parent="@style/Widget.Sherlock.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mobilelearning</item>	
    </style>
	
    <style name="DropDownListView.Mobilelearning" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mobilelearning</item>
    </style>

    <style name="ActionBarTabStyle.Mobilelearning" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mobilelearning</item>
    </style>
	
    <style name="DropDownNav.Mobilelearning" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mobilelearning</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mobilelearning</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mobilelearning</item>
    </style>
    
    <style name="ProgressBar.Mobilelearning" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mobilelearning</item>
    </style>
    
    <style name="ActionButton.CloseMode.Mobilelearning" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mobilelearning</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mobilelearning.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Mobilelearning</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mobilelearning</item>
    </style>
    

</resources>